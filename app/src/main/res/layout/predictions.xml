<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="311dp"
        android:layout_height="606dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.099">


        <RadioButton
            android:id="@+id/netherlands"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="Netherlands"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/usa"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="USA"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/argentina"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:text="Argentina"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/australia"
            android:layout_width="127dp"
            android:layout_height="35dp"
            android:text="Australia"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/france"
            android:layout_width="128dp"
            android:layout_height="35dp"
            android:text="France"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/poland"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="Poland"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/england"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="England"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/senegal"
            android:layout_width="124dp"
            android:layout_height="35dp"
            android:text="Senegal"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/japan"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:text="Japan"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/croatia"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:text="Croatia"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/brazil"
            android:layout_width="119dp"
            android:layout_height="35dp"
            android:text="Brazil"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/korea"
            android:layout_width="124dp"
            android:layout_height="35dp"
            android:text="South Korea"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/morocco"
            android:layout_width="113dp"
            android:layout_height="35dp"
            android:text="Morocco"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/spain"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Spain"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/portugal"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:text="Portugal"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/switzerland"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Switzerland"
            android:textSize="16sp" />

    </RadioGroup>

    <Button
        android:id="@+id/doneBT"
        android:layout_width="107dp"
        android:layout_height="53dp"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your winners!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

</androidx.constraintlayout.widget.ConstraintLayout>